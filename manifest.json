{
    "name": "__MSG_extName__",
    "description": "__MSG_extDescr__",
    "version": "1.0",
    "manifest_version": 2,
    "author": "Michael Onikienko",

    "default_locale": "en",
    "icons": {
        "16": "img/ext_icons/16.png",
        "48": "img/ext_icons/48.png",
        "128": "img/ext_icons/128.png"
    },

    "background": {
        "scripts": ["js/storage.js", "js/background.js"],
        "persistent": false
    },

    "commands": {
        "reload_dev_extensions": {
            "description": "__MSG_extDescr__",
            "suggested_key": {
                "default": "Alt+Z",
                "linux": "Alt+Z",
                "mac": "MacCtrl+Shift+Z",
                "windows": "Alt+Z"
            }
        }
    },

    "options_page": "options.html",

    "permissions": [
       "management",
       "contextMenus",
       "storage",
       "tabs"
   ]
}